         <label style="margin:5px;font-size: 20px;" for="email">Your Email</label>
         <input name="email" type="email" style="width: 450px;" placeholder="email@domain.com" required>
      
       
         <label style="margin:5px;font-size: 20px;" for="message">Your Complaint</label>
         <textarea name="message" placeholder=" type here ....." rows="5" cols="66" required></textarea>

       <button type="submit" style="margin: 100px;">Send Me Message</button> 
      
           <input type="hidden" name="_next" value="https://shivmkrv.github.io/BWP_PROJECT/registeredcomplaint.html">
